#include "systems/systems.h"

#include "engine.h"

void render_system() {
  int player = get_first(&is_player);
  Transform* transform = (Transform*) get_component(player, TrasnformType);

  Vec3f colour = (Vec3) {.r = 1.0, .g = 0.0, .b = 0.0};
  draw_circle_at(transform->position, 10, colour);

  colour = (Vec3) {.r = 0.0, .g = 1.0, .b = 0.0};
  EntityList enemies = predicate_mask(&is_enemy);
  for (int i = 0; i < enemies.len; i++) {
    transform = (Transform*) get_component(enemies[i], TransformType);

    draw_circle_at(transform->position, 5, colour);
  }

}
