#include <math.h>

#include "engine/math.h"

Mat4f mat4f_multiply(Mat4f mat1, Mat4f mat2);

Mat4f mat4f_scale(float x, float y, float z) {
  Mat4f out = (Mat4f) malloc(sizeof(Mat4f));
  out[0] = x;
  out[1] = 0;
  out[2] = 0;
  out[3] = 0;

  out[4] = 0;
  out[5] = y;
  out[6] = 0;
  out[7] = 0;

  out[8] = 0;
  out[9] = 0;
  out[10] = z;
  out[11] = 0;

  out[12] = 0;
  out[13] = 0;
  out[14] = 0;
  out[15] = 1;
}

Mat4f mat4f_translate(float x, float y, float z) {
  Mat4f out = (Mat4f) malloc(sizeof(Mat4f));
  out[0] = 1;
  out[1] = 0;
  out[2] = 0;
  out[3] = 0;

  out[4] = 0;
  out[5] = 1;
  out[6] = 0;
  out[7] = 0;

  out[8] = 0;
  out[9] = 0;
  out[10] = 1;
  out[11] = 0;

  out[12] = x;
  out[13] = y;
  out[14] = z;
  out[15] = 1;

  return out;
}

Mat4f mat4f_rotate(float x, float y, float z) {

}

