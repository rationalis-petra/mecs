#include <stdio.h>
#include <string.h>
#include <stdlib.h>

#include "components/info.h"

Info* new_info(char* name, enum Tag tags) {
  Info* info =  (Info*) malloc(sizeof(Info));
  info->name = (char*) malloc(sizeof(char) * (strlen(name)+1));

  strcpy(info->name, name);
  info->tags = tags;
  return info;
}

void delete_info(Info* info) {
  #ifdef DEBUG
  if (!info) {
    fprintf(stderr, "error in delete_info in component Info: attemt to delete null Info");
  }
  #endif

  free(info->name);
  free(info);
}
